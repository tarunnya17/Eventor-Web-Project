  <div class="absolute flex justify-center items-center w-full top-72">
    <form method="post" action="/search" class="grid grid-cols-4 gap-5 w-3/5 p-10 bg-[#643DFF] text-white rounded-2xl">
      <div>
        <h1>Search Event</h1>
        <div class="relative z-0 w-full mb-6 group">
          <input type="text" name="search_key" id="search_key" class="block py-2.5 px-0 w-full text-sm  bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder="Search Here"/>
          <!-- <label for="search_key" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Search here</label> -->
        </div>
      </div>
      <div>
        <h1>Place</h1>
        <div class="relative z-0 w-full mb-6 group">
          <input type="text" name="location_key" id="location_key" class="block py-2.5 px-0 w-full text-sm  bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder="Search Here" />
          <!-- <label for="search_key" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Search here</label> -->
        </div>
      </div>
      <div>
        <h1>Date</h1>
        <div class="relative z-0 w-full mb-6 group">
          <input type="date" name="date_key" id="date_key" class="block py-2.5 px-0 w-full text-sm bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder="Search Here"/>
          <!-- <label for="search_key" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Search here</label> -->
        </div>
      </div>
      <button type="submit" class="self-center w-fit h-fit py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Search</button>
    </form>
  </div>
  
  <div class="grid 2xl:grid-cols-4 lg:grid-cols-3 sm:grid-cols-2 grid-cols-1 gap-10 justify-around relative mx-8">
    <% for(var i = 0; i < EventData.length; i++) {%> 
      <% var date = new Date(EventData[i].startdate) %> 
      <% var month = date.getMonth() %> 
      <% var day = date.getDate() %> 
      <% var title = EventData[i].event_title %> 
      <% var description = EventData[i].description %> 
      <% var location = EventData[i].venue %> 
      <% var banner_image = EventData[i].banner_image.url %>
      <% var price = EventData[i].ticket_price %> 
      <% var id = EventData[i]._id %> 
    <div class="max-w-sm rounded-xl overflow-visible bg-transparent">
      <img class="w-full h-52 object-cover rounded-2xl" src="<%= banner_image %> "
  alt="">
      <div class="px-6 py-4 rounded-2xl bg-white cardText grid grid-cols-12">
        <div class="col-span-2 mr-2">
          <div class="text-blue-900 text-sm text-center font-semibold"><%= monthNames[month] %> </div>
          <div class="text-4xl text-center font-bold"><%= day  %> </div>
        </div>
        <div class="col-span-10 h-[8rem] overflow-hidden">
          <a href="/event/<%= id %>" class="font-bold text-lg"><%= title %></a>
          <div class="text-gray-500"> <%= description %>  </div>
        </div>
      </div>
    </div>
    <% }%> 

